    {
      "cell_type": "code",
      "execution_count": null,
      "metadata": {
        "id": "5DAlyRYM2Jd0"
      },
      "outputs": [],
      "source": [
        "import os\n",
        "import librosa\n",
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "from scipy.signal import stft, istft\n",
        "import soundfile as sf\n",
        "\n",
        "# Base paths for datasets\n",
        "BASE_PATH = \"path_to_dataset\"\n",
        "CLEAN_SPEECH_PATH = os.path.join(BASE_PATH, \"clean_speech\")\n",
        "NOISE_PATH = os.path.join(BASE_PATH, \"noise\")\n",
        "NOISY_SPEECH_PATH = os.path.join(BASE_PATH, \"noisy_speech\")\n",
        "\n",
        "# Preprocessing parameters\n",
        "SAMPLE_RATE = 16000\n",
        "FRAME_SIZE = 512  # 32 ms frame size at 16 kHz\n",
        "HOP_LENGTH = 256  # 50% overlap\n",
        "SNR_LEVELS = [0, 10, 20, 30, 40]\n",
        "\n",
        "def load_audio(file_path, sample_rate=SAMPLE_RATE):\n",
        "    \"\"\"Load an audio file and downsample to the specified sample rate.\"\"\"\n",
        "    audio, sr = librosa.load(file_path, sr=sample_rate)\n",
        "    return audio, sr\n",
        "\n",
        "def add_noise(clean_audio, noise_audio, snr_db):\n",
        "    \"\"\"Add noise to a clean audio file at a specific SNR.\"\"\"\n",
        "    clean_rms = np.sqrt(np.mean(clean_audio**2))\n",
        "    noise_rms = np.sqrt(np.mean(noise_audio**2))\n",
        "    snr_linear = 10**(snr_db / 20)\n",
        "    scaled_noise = noise_audio * (clean_rms / (snr_linear * noise_rms))\n",
        "    noisy_audio = clean_audio + scaled_noise\n",
        "    return noisy_audio\n",
        "\n",
        "def compute_stft(audio, frame_size=FRAME_SIZE, hop_length=HOP_LENGTH):\n",
        "    \"\"\"Compute the Short-Time Fourier Transform (STFT) of the audio signal.\"\"\"\n",
        "    stft_matrix = librosa.stft(audio, n_fft=frame_size, hop_length=hop_length, window='hann')\n",
        "    magnitude = np.abs(stft_matrix)\n",
        "    phase = np.angle(stft_matrix)\n",
        "    return magnitude, phase\n",
        "\n",
        "def save_preprocessed_data(output_path, data):\n",
        "    \"\"\"Save preprocessed data to a numpy file.\"\"\"\n",
        "    np.save(output_path, data)\n",
        "\n",
        "# Step 1: Add Noise to Create Noisy Speech Dataset\n",
        "clean_files = [os.path.join(CLEAN_SPEECH_PATH, file) for file in os.listdir(CLEAN_SPEECH_PATH)]\n",
        "noise_files = [os.path.join(NOISE_PATH, file) for file in os.listdir(NOISE_PATH)]\n",
        "\n",
        "os.makedirs(NOISY_SPEECH_PATH, exist_ok=True)\n",
        "\n",
        "for clean_file in clean_files:\n",
        "    clean_audio, _ = load_audio(clean_file)\n",
        "    for noise_file in noise_files:\n",
        "        noise_audio, _ = load_audio(noise_file)\n",
        "        for snr in SNR_LEVELS:\n",
        "            noisy_audio = add_noise(clean_audio, noise_audio, snr)\n",
        "            output_file = f\"{os.path.splitext(os.path.basename(clean_file))[0]}_{os.path.splitext(os.path.basename(noise_file))[0]}_snr{snr}.wav\"\n",
        "            output_path = os.path.join(NOISY_SPEECH_PATH, output_file)\n",
        "            sf.write(output_path, noisy_audio, SAMPLE_RATE)\n",
        "\n",
        "# Step 2: Preprocess Clean and Noisy Speech\n",
        "noisy_files = [os.path.join(NOISY_SPEECH_PATH, file) for file in os.listdir(NOISY_SPEECH_PATH)]\n",
        "\n",
        "# Ensure clean and noisy datasets have matching files\n",
        "assert len(clean_files) == len(noisy_files), \"Mismatch in clean and noisy files count.\"\n",
        "\n",
        "for i, (clean_file, noisy_file) in enumerate(zip(clean_files, noisy_files)):\n",
        "    # Load clean and noisy speech\n",
        "    clean_audio, _ = load_audio(clean_file)\n",
        "    noisy_audio, _ = load_audio(noisy_file)\n",
        "\n",
        "    # Compute STFT\n",
        "    clean_mag, clean_phase = compute_stft(clean_audio)\n",
        "    noisy_mag, noisy_phase = compute_stft(noisy_audio)\n",
        "\n",
        "    # Save magnitude spectrums for training\n",
        "    save_preprocessed_data(f\"clean_mag_{i}.npy\", clean_mag)\n",
        "    save_preprocessed_data(f\"noisy_mag_{i}.npy\", noisy_mag)\n",
        "\n",
        "    # (Optional) Plot magnitude spectrums\n",
        "    if i == 0:  # Plot for the first file as a sample\n",
        "        plt.figure(figsize=(10, 5))\n",
        "        plt.subplot(1, 2, 1)\n",
        "        plt.title(\"Clean Speech Magnitude Spectrum\")\n",
        "        plt.imshow(20 * np.log10(clean_mag + 1e-8), aspect='auto', origin='lower')\n",
        "        plt.colorbar()\n",
        "        plt.subplot(1, 2, 2)\n",
        "        plt.title(\"Noisy Speech Magnitude Spectrum\")\n",
        "        plt.imshow(20 * np.log10(noisy_mag + 1e-8), aspect='auto', origin='lower')\n",
        "        plt.colorbar()\n",
        "        plt.tight_layout()\n",
        "        plt.show()\n",
        "\n",
        "print(\"Preprocessing complete.\")\n"
      ]
    }
  ]
}
